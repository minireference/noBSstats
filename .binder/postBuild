#!/bin/bash

# Create settings directory
SETTINGS_DIR="${HOME}/.jupyter/lab/user-settings/@jupyterlab/apputils-extension"
mkdir -p "$SETTINGS_DIR"

# Disable JupyterLab news announcements
cat <<EOF > "$SETTINGS_DIR/notification.jupyterlab-settings"
{
  "fetchNews": false,
  "showDialog": false,
  "checkForUpdates": false
}
EOF

# Disable cookie consent popup
cat <<EOF > "$SETTINGS_DIR/privacy.jupyterlab-settings"
{
  "privacyConsent": {
    "version": 1,
    "accepted": true
  }
}
EOF

